option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: platzi_store_app.wsgi:application

container_commands:
  01_migrate:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && /var/app/venv/staging-LQM1lest/bin/python platzi_store_app/manage.py migrate"
    cwd: "/var/app/current"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && /var/app/venv/staging-LQM1lest/bin/python platzi_store_app/manage.py collectstatic --noinput"
    cwd: "/var/app/current"
    leader_only: true
