option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: platzi_store_app.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: staticfiles

container_commands:
  01_migrate:
    command: "python platzi_store_app/manage.py migrate --noinput"
    leader_only: true
    cwd: "/var/app/ondeck"
  02_collectstatic:
    command: "python platzi_store_app/manage.py collectstatic --noinput"
    leader_only: true
    cwd: "/var/app/ondeck"